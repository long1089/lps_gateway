@model IEnumerable<SftpConfig>
@{
    ViewData["Title"] = "SFTP配置管理";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>SFTP配置管理</h2>
    @if (User.IsInRole("Admin"))
    {
        <a asp-action="Create" class="btn btn-primary">创建新SFTP配置</a>
    }
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card">
    <div class="card-body">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>名称</th>
                    <th>主机地址</th>
                    <th>端口</th>
                    <th>用户名</th>
                    <th>认证类型</th>
                    <th>状态</th>
                    <th>创建时间</th>
                    @if (User.IsInRole("Admin"))
                    {
                        <th>操作</th>
                    }
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Host</td>
                        <td>@item.Port</td>
                        <td>@item.Username</td>
                        <td>
                            @if (item.AuthType == "password")
                            {
                                <span class="badge bg-info">密码</span>
                            }
                            else if (item.AuthType == "key")
                            {
                                <span class="badge bg-warning">私钥</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">@item.AuthType</span>
                            }
                        </td>
                        <td>
                            @if (item.Enabled)
                            {
                                <span class="badge bg-success">启用</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">禁用</span>
                            }
                        </td>
                        <td>@item.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                        @if (User.IsInRole("Admin"))
                        {
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">编辑</a>
                                <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline"
                                      onsubmit="return confirm('确定要删除此SFTP配置吗？这可能影响使用该配置的报表类型。');">
                                    <button type="submit" class="btn btn-sm btn-danger">删除</button>
                                </form>
                            </td>
                        }
                    </tr>
                }
            </tbody>
        </table>
        
        @if (!Model.Any())
        {
            <p class="text-center text-muted my-4">暂无SFTP配置</p>
        }
    </div>
</div>
